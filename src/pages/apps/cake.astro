>
  <div class="noise-overlay"></div>
  <Navbar />

  <main class="bg-surface">
    <!-- Hero Section -->
    <Hero />

    <!-- Stats Bar -->
    <section class="py-12 px-6 border-t border-b border-white/5">
      <div class="max-w-[1000px] mx-auto grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map((stat) => (
          <div class="text-center scroll-fade">
            <div class="text-brand font-extrabold text-3xl md:text-4xl tracking-tighter mb-1">{stat.value}</div>
            <div class="text-text-muted text-sm font-medium tracking-tight">{stat.label}</div>
          </div>
        ))}
      </div>
    </section>

    <!-- Bento Feature Grid -->
    <BentoGrid items={bentoItems} />

    <!-- How It Works -->
    <FeatureSection features={howItWorks} />

    <!-- Privacy Section -->
    <section class="py-24 px-6 scroll-mt-24 section-transition" id="privacy">
      <div class="max-w-[1100px] mx-auto">
        <div class="relative rounded-[24px] overflow-hidden">
          <!-- Background -->
          <div class="absolute inset-0 bg-white/[0.03] backdrop-blur-md border border-white/10 rounded-[24px]" />
          <!-- Top accent line -->
          <div class="absolute top-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-brand to-transparent" />
          <!-- Glow -->
          <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[500px] h-[250px] bg-brand/5 blur-[100px] pointer-events-none" />

          <div class="relative z-10 flex flex-col lg:flex-row items-center gap-12 p-10 md:p-16">
            <!-- Text side -->
            <div class="flex-1 text-center lg:text-left">
              <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-brand/10 border border-brand/20 mb-6">
                <span class="text-brand text-xs font-semibold tracking-wide uppercase">Privacy First</span>
              </div>

              <h3 class="text-white font-bold text-2xl md:text-3xl tracking-tight mb-4">
                Built for Privacy
              </h3>
              <p class="text-text-body text-base md:text-lg leading-relaxed mb-6">
                No accounts required. Zero data collection. Device-only storage. Your contacts stay on your iPhone â€” always.
              </p>

              <div class="space-y-3 mb-8">
                {['No Account Required', 'Zero Data Collection', 'Device-Only Storage', 'No Third Parties'].map((item) => (
                  <div class="flex items-center gap-3 justify-center lg:justify-start">
                    <div class="w-5 h-5 rounded-full bg-brand/20 flex items-center justify-center">
                      <svg class="w-3 h-3 text-brand" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                      </svg>
                    </div>
                    <span class="text-text-body text-sm">{item}</span>
                  </div>
                ))}
              </div>

              <a
                href="/privacy/cake"
                class="inline-flex items-center gap-2 text-brand font-semibold text-base tracking-tight transition-all duration-300 hover:gap-3 group"
              >
                Read Full Privacy Policy
                <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>

            <!-- Phone side -->
            <div class="flex-shrink-0">
              <DeviceMockup screenshot="/assets/cake/screen2.png" alt="Cake - Contact Profile" />
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 px-6 scroll-mt-24 section-transition" id="download">
      <div class="max-w-[800px] mx-auto text-center">
        <div class="relative rounded-[24px] p-10 md:p-20 bg-white/[0.03] backdrop-blur-md border border-white/10 overflow-hidden">
          <!-- Background glow -->
          <div class="absolute inset-0 pointer-events-none">
            <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] rounded-full bg-brand/8 blur-[120px]" />
          </div>

          <div class="relative z-10">
            <div class="w-20 h-20 mx-auto mb-8">
              <img src="/assets/cakeLogo.png" alt="Cake" class="w-full h-full rounded-2xl shadow-brand-lg" />
            </div>

            <h2 class="text-white font-extrabold text-3xl md:text-4xl tracking-tighter mb-4">
              Ready to Never Forget?
            </h2>
            <p class="text-text-body text-base md:text-lg leading-relaxed mb-10 max-w-[500px] mx-auto">
              Download Cake and start celebrating smarter. Private, beautiful, and completely free.
            </p>

            <a href={APPS.cake.appStoreUrl} target="_blank" rel="noopener noreferrer" class="inline-block">
              <AppStoreButton href={APPS.cake.appStoreUrl} size="lg" />
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Marquee -->
    <Marquee />
  </main>

