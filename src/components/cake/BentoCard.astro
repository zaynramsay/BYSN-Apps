---
interface Props {
  class?: string;
  glow?: boolean;
}

const { class: className = '', glow = false } = Astro.props;
---

<div
  class:list={[
    'bento-card relative rounded-[24px] p-6 overflow-hidden transition-all duration-500',
    'bg-surface-card/80 backdrop-blur-md border border-white/10',
    'hover:border-white/20 hover:bg-surface-elevated/80',
    glow && 'shadow-brand',
    className,
  ]}
>
  <slot />
</div>

<style>
  .bento-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3), 0 0 30px rgba(252, 61, 79, 0.1);
  }
</style>
