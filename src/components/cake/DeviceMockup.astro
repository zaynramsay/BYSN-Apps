---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<div class:list={['device-mockup relative', className]}>
  <!-- iPhone Frame -->
  <div class="relative w-[280px] h-[570px] mx-auto">
    <!-- Outer frame -->
    <div class="absolute inset-0 rounded-[3rem] bg-gradient-to-b from-[#2A2A2A] to-[#1A1A1A] shadow-[0_0_0_2px_rgba(255,255,255,0.1),0_40px_80px_rgba(0,0,0,0.5)]">
      <!-- Inner bezel -->
      <div class="absolute inset-[3px] rounded-[2.8rem] bg-black overflow-hidden">
        <!-- Dynamic Island -->
        <div class="absolute top-3 left-1/2 -translate-x-1/2 w-[100px] h-[28px] bg-black rounded-full z-20" />

        <!-- Screen content area -->
        <div class="absolute inset-0 rounded-[2.8rem] overflow-hidden phone-screen">
          <slot />
        </div>
      </div>
    </div>

    <!-- Side button (right) -->
    <div class="absolute top-[120px] -right-[2px] w-[3px] h-[40px] rounded-r bg-[#2A2A2A]" />
    <!-- Volume buttons (left) -->
    <div class="absolute top-[100px] -left-[2px] w-[3px] h-[28px] rounded-l bg-[#2A2A2A]" />
    <div class="absolute top-[140px] -left-[2px] w-[3px] h-[28px] rounded-l bg-[#2A2A2A]" />
  </div>
</div>

<style>
  .device-mockup {
    filter: drop-shadow(0 20px 60px rgba(252, 61, 79, 0.1));
  }
</style>
