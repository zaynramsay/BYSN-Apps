---
interface Props {
  text?: string;
  class?: string;
}

const { text = 'Download Cake', class: className = '' } = Astro.props;

const items = Array(8).fill(text);
---

<div class:list={['marquee-container overflow-hidden py-12 border-t border-b border-white/5', className]}>
  <div class="marquee-track flex animate-infinite-scroll whitespace-nowrap">
    {items.map((item) => (
      <span class="marquee-item text-brand font-bold text-[clamp(2rem,5vw,4rem)] tracking-tighter mx-8 flex items-center gap-8 shrink-0">
        {item}
        <span class="w-3 h-3 rounded-full bg-brand/40 shrink-0" />
      </span>
    ))}
    {items.map((item) => (
      <span class="marquee-item text-brand font-bold text-[clamp(2rem,5vw,4rem)] tracking-tighter mx-8 flex items-center gap-8 shrink-0" aria-hidden="true">
        {item}
        <span class="w-3 h-3 rounded-full bg-brand/40 shrink-0" />
      </span>
    ))}
  </div>
</div>
