---
import { APPS } from '@/lib/constants';
---

<section class="apps-section py-24 px-6 max-w-[1400px] mx-auto" id="apps">
  <div class="text-center mb-16">
    <h2 class="apps-heading text-text-primary font-bold tracking-tighter mb-6 text-reveal">
      Our Apps
    </h2>
    <p class="apps-subheading text-text-tertiary max-w-[600px] mx-auto leading-relaxed word-reveal">
      Each app represents our commitment to premium design and thoughtful functionality.
    </p>
  </div>

  <div class="apps-grid grid grid-cols-1 lg:grid-cols-2 gap-8 reveal-group">
    <!-- Cake App -->
    <div class="reveal-item">
      <a href="/apps/cake" class="app-card-premium tilt-card glass-premium p-10 block group hover-lift">
        <!-- Animated border on hover -->
        <div class="animated-border-wrapper absolute inset-0 rounded-[30px] opacity-0 group-hover:opacity-100 transition-opacity duration-500 overflow-hidden">
          <div class="animated-border-line"></div>
        </div>

        <!-- Header -->
        <div class="flex items-center gap-6 mb-8">
          <div
            class="app-icon w-[96px] h-[96px] rounded-[24px] flex-shrink-0 relative flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            style="background: linear-gradient(135deg, #FC3D4F 0%, #FF6B7D 100%); box-shadow: 0 12px 40px rgba(252, 61, 79, 0.3);"
          >
            <svg viewBox="0 0 24 24" fill="currentColor" class="w-12 h-12 text-white">
              <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V20C21 21.1 20.1 22 19 22H5C3.9 22 3 21.1 3 20V9C3 7.9 3.9 7 5 7H19C20.1 7 21 7.9 21 9ZM7 19H17V16H7V19Z" />
            </svg>
          </div>
          <div class="app-info">
            <h3 class="text-[2rem] text-text-primary font-semibold tracking-tight mb-2">
              {APPS.cake.name}
            </h3>
            <p class="text-text-tertiary text-base tracking-tight font-medium">
              {APPS.cake.tagline}
            </p>
          </div>
        </div>

        <!-- Description -->
        <p class="text-text-secondary leading-relaxed text-[17px] tracking-tight mb-8">
          {APPS.cake.description}
        </p>

        <!-- Features -->
        <div class="flex flex-wrap gap-3">
          {APPS.cake.features.map((feature) => (
            <span class="feature-tag-premium">
              {feature}
            </span>
          ))}
        </div>

        <!-- Arrow indicator -->
        <div class="absolute bottom-8 right-8 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-x-2 group-hover:translate-x-0">
          <svg class="w-6 h-6 text-cake-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </div>
      </a>
    </div>

    <!-- ListenOn App - Coming Soon -->
    <div class="reveal-item">
      <div class="app-card-premium tilt-card glass-premium p-10 relative group hover-lift">
        <!-- Coming Soon overlay -->
        <div class="absolute inset-0 rounded-[30px] bg-gradient-to-br from-[#1DB954]/5 to-transparent" />

        <!-- Header -->
        <div class="flex items-center gap-6 mb-8 relative z-10">
          <div
            class="app-icon w-[96px] h-[96px] rounded-[24px] flex-shrink-0 relative flex items-center justify-center group-hover:scale-110 transition-transform duration-500"
            style="background: linear-gradient(135deg, #1DB954 0%, #1ED760 100%); box-shadow: 0 12px 40px rgba(29, 185, 84, 0.3);"
          >
            <!-- Music/Link icon -->
            <svg viewBox="0 0 24 24" fill="currentColor" class="w-12 h-12 text-white">
              <path d="M12 3v10.55c-.59-.34-1.27-.55-2-.55-2.21 0-4 1.79-4 4s1.79 4 4 4 4-1.79 4-4V7h4V3h-6z"/>
            </svg>
          </div>
          <div class="app-info">
            <div class="flex items-center gap-3 mb-2">
              <h3 class="text-[2rem] text-text-primary font-semibold tracking-tight">
                {APPS.listenOn.name}
              </h3>
              <span class="coming-soon-badge-premium">Coming Soon</span>
            </div>
            <p class="text-text-tertiary text-base tracking-tight font-medium">
              {APPS.listenOn.tagline}
            </p>
          </div>
        </div>

        <!-- Description -->
        <p class="text-text-secondary leading-relaxed text-[17px] tracking-tight mb-8 relative z-10">
          {APPS.listenOn.description}
        </p>

        <!-- Features -->
        <div class="flex flex-wrap gap-3 relative z-10">
          {APPS.listenOn.features.map((feature) => (
            <span class="bg-[#1DB954]/10 text-[#1ED760] px-4 py-2 rounded-full text-sm font-medium border border-[#1DB954]/20 backdrop-blur-sm">
              {feature}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .app-card-premium {
    @apply relative;
  }

  .feature-tag-premium {
    @apply px-4 py-2 rounded-full text-sm font-medium backdrop-blur-sm;
    background: rgba(252, 61, 79, 0.1);
    color: #FF6B7D;
    border: 1px solid rgba(252, 61, 79, 0.2);
  }

  .coming-soon-badge-premium {
    @apply px-3 py-1 rounded-full text-xs font-semibold uppercase tracking-wider;
    background: linear-gradient(135deg, rgba(29, 185, 84, 0.2), rgba(29, 185, 84, 0.1));
    color: #1ED760;
    border: 1px solid rgba(29, 185, 84, 0.3);
  }

  /* Animated border effect */
  .animated-border-wrapper {
    pointer-events: none;
  }

  .animated-border-line {
    @apply absolute w-[200%] h-[2px] -left-1/2 top-0;
    background: linear-gradient(90deg, transparent, #FC3D4F, transparent);
    animation: borderSlide 2s linear infinite;
  }

  @keyframes borderSlide {
    from {
      transform: translateX(-50%);
    }
    to {
      transform: translateX(0%);
    }
  }

  .apps-heading {
    font-size: clamp(2.2rem, 5vw, 4rem);
  }

  .apps-subheading {
    font-size: clamp(1rem, 2vw, 1.3rem);
  }

  @media (max-width: 768px) {
    .apps-grid {
      gap: 1.5rem;
    }
    .app-card-premium {
      padding: 2rem;
    }
    .app-icon {
      width: 72px;
      height: 72px;
      border-radius: 18px;
    }
    .app-icon svg {
      width: 36px;
      height: 36px;
    }
    .app-info h3 {
      font-size: 1.5rem;
    }
  }
</style>
