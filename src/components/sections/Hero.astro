---
import BrandMark from '@/components/ui/BrandMark.astro';

interface Props {
  title: string;
  tagline: string;
  subtitle?: string;
  ctaText?: string;
  ctaHref?: string;
}

const { title, tagline, subtitle, ctaText = 'Explore Our Apps', ctaHref = '#apps' } = Astro.props;
---

<section class="hero min-h-screen flex items-center justify-center text-center relative overflow-hidden">
  <div class="hero-content max-w-[900px] px-6 pt-16 z-10">
    <BrandMark />

    <h1 class="text-[4.5rem] font-extrabold gradient-text mb-6 tracking-tighter leading-tight">
      {title}
    </h1>

    <p class="text-[1.9rem] text-text-secondary mb-4 font-normal leading-relaxed tracking-tight">
      {tagline}
    </p>

    {
      subtitle && (
        <p class="text-[1.25rem] text-text-tertiary mb-14 font-normal leading-relaxed tracking-tight max-w-[700px] mx-auto">
          {subtitle}
        </p>
      )
    }

    <a href={ctaHref} class="btn-primary">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
        <path d="M17 2.5V9A2.5 2.5 0 0 1 14.5 11.5H8A2.5 2.5 0 0 0 5.5 14V20.5A2.5 2.5 0 0 0 8 23H16A2.5 2.5 0 0 0 18.5 20.5V11.5H20.5A2.5 2.5 0 0 0 23 9V2.5A2.5 2.5 0 0 0 20.5 0H19.5A2.5 2.5 0 0 0 17 2.5Z" />
      </svg>
      {ctaText}
    </a>
  </div>
</section>

<style>
  @media (max-width: 768px) {
    .hero h1 {
      font-size: 2.8rem;
    }
    .hero .text-\[1\.9rem\] {
      font-size: 1.4rem;
    }
    .hero .text-\[1\.25rem\] {
      font-size: 1.1rem;
    }
  }
</style>
