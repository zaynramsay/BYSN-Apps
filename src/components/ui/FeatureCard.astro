---
interface Props {
  icon: string;
  title: string;
  description: string;
  variant?: 'blue' | 'red';
}

const { icon, title, description, variant = 'red' } = Astro.props;

const accentColor = variant === 'red' ? 'rgba(252, 61, 79' : 'rgba(0, 122, 255';
---

<div class="feature-card glass-container p-12 transition-all duration-500 relative overflow-hidden rounded-lg group fade-in">
  <!-- Hover gradient overlay -->
  <div
    class="absolute inset-0 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500"
    style={`background: linear-gradient(135deg, rgba(255, 255, 255, 0.03) 0%, ${accentColor}, 0.02) 50%, rgba(255, 255, 255, 0.01) 100%);`}
  />

  <!-- Icon -->
  <div
    class="feature-icon w-[72px] h-[72px] rounded-DEFAULT flex items-center justify-center text-[32px] mb-8 relative z-10 transition-all duration-300 group-hover:shadow-red-glow"
    style={`background: ${accentColor}, 0.1); border: 1px solid ${accentColor}, 0.2);`}
  >
    {icon}
  </div>

  <!-- Content -->
  <h3 class="text-[1.75rem] text-text-primary font-semibold tracking-tight mb-5 relative z-10">
    {title}
  </h3>
  <p class="text-text-tertiary leading-relaxed text-base tracking-tight relative z-10">
    {description}
  </p>
</div>

<style>
  .feature-card:hover {
    transform: translateY(-12px);
    box-shadow:
      0 32px 80px rgba(0, 0, 0, 0.5),
      0 8px 32px rgba(252, 61, 79, 0.1);
  }

  .feature-card:hover .feature-icon {
    background: rgba(252, 61, 79, 0.15);
    border-color: rgba(252, 61, 79, 0.3);
    box-shadow: 0 8px 24px rgba(252, 61, 79, 0.2);
  }
</style>
