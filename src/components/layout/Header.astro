---
interface Props {
  links: Array<{ label: string; href: string }>;
  variant?: 'blue' | 'red';
  showBrand?: boolean;
}

const { links, variant = 'blue', showBrand = true } = Astro.props;

const accentColor = variant === 'red' ? '#FC3D4F' : '#007AFF';
---

<header class="header-container fixed top-6 left-1/2 -translate-x-1/2 z-50 w-[calc(100%-3rem)] max-w-[1200px] flex items-center justify-between">
  {showBrand && (
    <a href="/" class="brand-link glass-premium px-6 py-3 rounded-[30px] flex items-center gap-3 group">
      <div class="brand-icon w-8 h-8 rounded-[10px] flex items-center justify-center"
           style={`background: linear-gradient(135deg, ${accentColor} 0%, ${accentColor}CC 100%);`}>
        <svg viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-white">
          <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V20C21 21.1 20.1 22 19 22H5C3.9 22 3 21.1 3 20V9C3 7.9 3.9 7 5 7H19C20.1 7 21 7.9 21 9ZM7 19H17V16H7V19Z" />
        </svg>
      </div>
      <span class="brand-text text-text-primary font-semibold text-[15px] tracking-tight">BYSN Apps</span>
    </a>
  )}

  <nav class="glass-premium px-8 py-4 rounded-[30px]">
    <ul class="nav-links flex list-none gap-10 items-center">
      {
        links.map((link) => (
          <li>
            <a href={link.href} class="nav-link group" data-section={link.href.replace('#', '')}>
              {link.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<script>
  function initScrollSpy() {
    const navLinks = document.querySelectorAll('.nav-link[data-section]');
    const sections = new Map<string, Element>();

    navLinks.forEach(link => {
      const sectionId = link.getAttribute('data-section');
      if (sectionId && sectionId !== '') {
        const section = document.getElementById(sectionId);
        if (section) sections.set(sectionId, section);
      }
    });

    function updateActiveLink() {
      const scrollPos = window.scrollY + 200;
      let currentSection = '';

      sections.forEach((section, id) => {
        const sectionTop = (section as HTMLElement).offsetTop;
        const sectionHeight = (section as HTMLElement).offsetHeight;
        if (scrollPos >= sectionTop && scrollPos < sectionTop + sectionHeight) {
          currentSection = id;
        }
      });

      navLinks.forEach(link => {
        link.classList.toggle('active', link.getAttribute('data-section') === currentSection);
      });
    }

    window.addEventListener('scroll', updateActiveLink, { passive: true });
    updateActiveLink();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initScrollSpy);
  } else {
    initScrollSpy();
  }
</script>

<style define:vars={{ underlineColor: variant === 'red' ? '#FC3D4F' : '#007AFF' }}>
  .nav-link::after {
    background: var(--underlineColor);
  }

  .nav-link.active {
    color: white;
  }

  .nav-link.active::after {
    width: 100%;
  }

  .brand-link {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .brand-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
  }

  .brand-link:hover .brand-icon {
    transform: scale(1.1);
  }

  .brand-icon {
    transition: transform 0.3s ease;
  }

  @media (max-width: 768px) {
    .header-container {
      flex-direction: column;
      gap: 0.5rem;
      top: 0.75rem;
      width: calc(100% - 1.5rem);
    }

    .brand-link {
      padding: 0.4rem 0.75rem;
      border-radius: 20px;
    }

    .brand-text {
      font-size: 13px;
    }

    nav {
      padding: 0.5rem 1rem;
      border-radius: 20px;
    }

    .nav-links {
      gap: 1.25rem;
    }

    .nav-link {
      font-size: 13px;
    }
  }

  @media (max-width: 380px) {
    .brand-text {
      display: none;
    }

    .nav-links {
      gap: 0.75rem;
    }

    .nav-link {
      font-size: 12px;
    }
  }
</style>
